<h2 class="blue-title">Pending Friends</h2>

<ul style="overflow: hidden;">
  <% for friend in @pending_friends %> 
    <span style="height:120px;"> 
      <%= image_tag user_pic(friend.friend), :class=>"left" %>
      <div style="width:70%">
        <div class="blue-title mt10"><%= user_name(friend.friend) %></div> 
      </div>
    </span> 
  <% end %>
</ul>

