<div style="height:160px">
  <h2 class="blue-title">
    <%= t(:title, :scope=>[:view, :personal, :_friends]) %>
  </h2>  
  <ul>      
    <% for friendship in @current_user.friendships %>      
      <div class="left" style="margin: 1px;" >
        <%= link_to image_tag(user_pic(friendship.friend), {:width=>60, :height=>60}), person_path(friendship.friend) %>
      </div>
    <% end %> 
  </ul> 

