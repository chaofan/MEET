<div id="user_info">
  <% if current_user.profile.avatar_file_name == "" %>
    <%= image_tag current_user.profile.avatar.url(:thumb) %>
  <% else %>
    <%= image_tag("male.gif") %>
  <% end %> 
  <% if user_signed_in? %>
    <ul>
      <li>
      用户名:	<%= current_user.profile.name %>
      </li>
      <li>
      积分:	<%= current_user.score %>
      </li>
      <li>
      金币:	0
      </li>
    </ul>
  <% elsif teacher_signed_in? %>
    <ul>
      <li>
      用户名:	<%= current_teacher.display_name %>
      </li>
      <li>
      金币:	0
      </li>
    </ul>
  <% elsif admin_signed_in? %>
    <ul>
      <li>
      用户名:	<%= current_admin.display_name %>
      </li>
    </ul>
    <% end　%>
  <% else %>
  <% end %>
</div>
