<%= simple_form_for @profile, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %> 

  <%= f.input :name %>
  <%= f.input :english_name %>
  <%= f.input :birthday, :as => :date, :start_year => Date.today.year - 40,
                                :end_year => Date.today.year - 12, 
                                :order => [:year, :month, :day] %>
  <%= f.input :star, :collection=>['双子座','天平座'] %>

  <%= f.input :sex, :collection=>{'男'=>false, '女'=>true}, :input_html=>{:value=>""} %>
  
  <%= f.input :avatar,  :as=>:file %>

  <%= f.button :submit %>
<% end %>


