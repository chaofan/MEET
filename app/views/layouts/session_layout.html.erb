    <%= csrf_meta_tag %>
    <%= yield :header %>
  </head>

  <body>
    <div id="divHeader_login">
      <%= render  "/shared/new_header" %>
    </div>

    <div id="divall">
      <%= yield %>
    </div>

    <div id="footer" style="border:none;">
      <%= render  "shared/footer" %>
      <%= yield :footer %>
    </div>
  </body>
</html>
