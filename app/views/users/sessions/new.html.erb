<div id="sidebar">
  <div class="m1t"></div>
  <div class="logindiv">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <label class="tar left mt30" style="width:55px;"><%= t(:label_email) %></label>
        <%= f.text_field :email, :class=>"left mt30 mb10", :size=>22 %>
      </div>

      <div>
        <label class="tar left" style="width:55px;margin-top:5px;"><%= t(:label_password) %></label>
        <%= f.password_field :password, :style=>"margin-top:5px", :size=>22 %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div style="clear:both;margin-left:55px;">
          <%= f.check_box :remember_me, :class=>"left" %>  
          <label><%= t(:label_remember_me) %></label>
        </div>
      <% end -%>

      <div class="field" style="clear:both;margin-left:55px;">
        <%= f.submit "登录" %> 
      </div>
    <% end %>

    <div style="background:url(http://img1.kaixin001.com.cn/i/index_app.gif) 
      repeat-x;width:190px;margin:20px auto 15px 7px;height:2px;"></div>

    <div class="field" style="margin-left:30px">
      <%= t(:message_not_registered) %>
    </div>
    <div class="field" style="margin-left:30px">
      <%= link_to	"立即注册", new_user_registration_path %>
    </div>
  </div>
</div>

<div id="main" style="width:773px;margin-left:-3px;">
