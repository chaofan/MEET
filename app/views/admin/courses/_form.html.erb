<%= simple_form_for ([:admin, @course]) do |f| %>
  <%= f.input :name %>
  <%= f.input :description, :input_html=>{:cols=>80, :rows=>15} %>

  <%= f.input :instructor %>
  <%= f.input :instructor_description,  :input_html=>{:cols=>80, :rows=>10} %>

  <%= f.input :gold,  :as=>:integer %>

  <%= f.input :course_category_id, :as=>:hidden, :input_html=>{:value=>@course_category.id} %>
  <%= f.input :subject_id, :as=>:hidden, :input_html=>{:value=>@subject.id} %>

  <% if @course_category.name.downcase.index("college education") %>
    <%= f.association :school %>
  <% end %>

  <%= f.association :level %>

  <%= f.button  :submit %>
<% end %>

