<p class="image">
<%= image_tag("male.gif", :height=>48, :width=>48) %>
</p>
<div class="info" id="info_<%= comment.id %>">
  <span class="time"><%= comment.title %></span>
  <span class="delete">  <%= link_to t(:delete, :scope=>[:view]), admin_course_comment_path(comment.commentable, comment), :method=>:delete, :remote=>true, :class=>"Qconfirm" %></span>
</div>
<div class="content" id="content_<%= comment.id %>" style="display:none">
  <div><%= raw comment.memo %></div>
</div>
