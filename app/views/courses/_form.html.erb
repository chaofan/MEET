<%= simple_form_for (@course) do |f| %>

  <%= f.input :course_category_id, :as=>:hidden, :input_html => { :value => @course_category.id } %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :gold %>

  <%= f.association :subject %>
  <%= f.association :school %>

  <%= f.association :level  %>

  <%= f.button  :submit %>
<% end %>
