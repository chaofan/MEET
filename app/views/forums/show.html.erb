<%= button_to	'发帖子', new_forum_topic_path(@forum), :method=>:get %>

<% @topics.each do |topic| %>
  <div class="topic-entry">
    <p class="image">
    <img src="/images/forum.gif" width="30"/>
    </p>
    <div class="info">
      <div class="name">
        <%= link_to topic.name, forum_topic_path(@forum, topic) %>
        <span class="edit">
          <%= link_to "删除", forum_topic_path(@forum, topic), :method=>:delete, :confirm=>"are you sure to delete?" %>
        </span>
      </div>
      <div class="last-info">
        <span class="right">
          <%= date_diffs(topic.created_at) %>
          发帖人: <%= topic.id %>
          金币: <%= topic.gold %> <span class="align-center"><%= image_tag "ico_money.gif" %></span>
          回答: <%= topic.forum_posts.count %>
        </span>

        <span class="name"></span>
      </div>
    </div>

  </div>
<% end %>
